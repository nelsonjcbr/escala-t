<div class="row flex-center min-vh-100 py-6">
  <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
    <a class="d-flex flex-center mb-4" href="<%= root_path%>">
      <span class="font-sans-serif fw-bolder fs-5 d-inline-block"><%= Rails.application.class.module_parent_name %></span>
    </a>
    <div class="card">
      <div class="card-body p-4 p-sm-5">
        <div class="row flex-between-center mb-2">
          <div class="col-auto">
            <h5>Entrar</h5>
          </div>
        </div>
        <%= simple_form_sh(resource, as: resource_name, url: session_path(resource_name), wrapper: 'vertical_form_devise') do |f| %>         
          <%= render 'shared/erros_cadastros', registro: resource %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      placeholder: "Email address" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      placeholder: "Password" %>
          <div class="row flex-between-center">
            <div class="col-auto">
              <%= f.input :remember_me, as: :boolean, 
                          wrapper: :vertical_boolean_devise if devise_mapping.rememberable? %>
            </div>
            <div class="col-auto">                          
              <%= render "devise/shared/link_esqueceu_senha"%>
            </div>
          </div>
          <div class="mb-3">
            <%= f.button :submit, "Entrar", class: "btn btn-primary d-block w-100 mt-3" %>
          </div>
        <% end %>
