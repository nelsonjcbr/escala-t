<div id="<%= dom_id user %>">

<section id="caixa-inteira">
  <div class="row match-height">
    <div class="col-12">

      <div class="card">
        <div class="card-header">
          <h4 class="card-title">  
            <%= image_tag user.foto_url if user.foto_data %>
            <%= user.name %>
          </h4>
        </div>
        <div class="card-body"> 

          <div class="row">
            <div class="col-md-2">
              <label>email</label>
            </div>
            <div class="col-md-4">
              <strong><%= user.email %></strong>
            </div>

            <div class="col-md-2">
              <label>token:</label>
            </div>
            <div class="col-md-4">
              <strong><%= 'user.token' %></strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="col-12 d-flex justify-content-end">
  <%= link_to "Editar", edit_user_path(user), class: "btn btn-primary me-1 mb-1" %>
  <%= link_to "Alterar Senha", '/users/edit', class: "btn btn-primary me-1 mb-1" %>
  <%= button_to "Excluir", user, form: { data: { turbo_confirm: "VocÃª tem certeza que deseja excluir?" } }, method: :delete,  class: "btn btn-danger me-1 mb-1" %>
</div>

