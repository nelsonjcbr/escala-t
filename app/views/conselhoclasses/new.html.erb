
<%= turbo_frame_tag @conselhoclass do %>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body"><h2>Novo</h2>
          <%= render "form", conselhoclass: @conselhoclass %>
        </div>
      </div>
    </div>
  </div>

<button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#error-modal">Demo modal</button>
<div class="modal fade" id="error-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 500px">
    <div class="modal-content position-relative">
      <div class="position-absolute top-0 end-0 mt-2 me-2 z-1">
        <button class="btn-close btn btn-sm btn-circle d-flex flex-center transition-base" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <div class="rounded-top-3 py-3 ps-4 pe-6 bg-body-tertiary">
          <h4 class="mb-1" id="modalExampleDemoLabel">Novo conselho de classe </h4>
        </div>
        <div class="p-4 pb-0">
      
        <%= render "form", conselhoclass: @conselhoclass %>

        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<% end %>