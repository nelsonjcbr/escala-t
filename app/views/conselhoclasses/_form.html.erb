<div class="conselhoclass-card">
  <%= form_with model: conselhoclass do |form| %>

  <section id="multiple-column-form">
    <div class="row match-height">
      <div class="col-12">
        <div class="card">
          <div class="card-content">
            <div class="card-body">
              <form class="form">
                <div class="row g-2">
                  <div class="form-group col-md-2">
                    <%= form.text_field :sigla, class: "form-control", placeholder: "Sigla", title: "Sigla do conselho de classe", required: true %>
                    <%= errors_for conselhoclass, :sigla %>
                  </div>
                  <div class="form-group col-md-6">
                    <%= form.text_field :nome, class: "form-control", placeholder: "Nome", title: "Nome do conselho de classe", required: true %>
                    <%= errors_for conselhoclass, :nome %>
                  </div>
                  <div class="col-12 d-flex justify-content-end">
                    <%= form.submit "Gravar", class: "btn btn-primary me-1 mb-1" %>
                    <%= link_to "Cancelar", conselhoclasses_path, class: "btn btn-light-secondary me-1 mb-1" %>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>
</div>