<p style="color: green"><%= notice %></p>

<div class="page-heading">
  <div class="page-title">
    <div class="row">
      <div class="col-12 col-md-6 order-md-1 order-last">
        <h3>Unidades de Saúde %></h3>
        <p class="text-subtitle text-muted">Mantém o cadastro das Unidades onde são feito os plantões.</p>
      </div>
      <div class="col-12 col-md-6 order-md-2 order-first">
        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Checkout Page</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-12">
        <%= link_to " Novo", new_estabelecimento_unidade_path(@estabelecimento), class: "fa fa-plus-circle text-success p-2 fw-bold" %>
      </div>
      <div class="col-md-6 col-12">
        <div class="form-group position-relative has-icon-right">
          <input type="text" class="form-control" placeholder="Procurar...">
          <div class="form-control-icon">
            <i class="bi bi-funnel"></i>
          </div>
        </div>
      </div>
    </div>

    <section class="section">
      <div class="row" id="table-striped-dark">
        <div class="col-12">
          <div class="card">
            <div class="card-content">
              <!-- table strip dark -->
              <div class="table-responsive">
                <table class="table table-based">
                  <thead>
                    <tr>
                      <th>Unidades de Saúde do  <%= @estabelecimento.nome %></th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <% @unidades.each do |unidade| %>
                    <tbody>
                      <tr>
                        <td class="text-bold-500"><%= unidade.nome %>
                          <small class="fst-italic"><br/><%= "Criado em #{unidade.created_at.strftime('%d/%m/%y %H:%M')}" %>
                          <%= ", alterado em #{unidade.updated_at.strftime('%d/%m/%y %H:%M')}" if unidade.created_at != unidade.updated_at %>
                          </small>
                        </td>
                        <td><%= link_to "Editar", edit_estabelecimento_unidade_path(@estabelecimento, unidade), class: "btn btn-primary me-1 mb-1" %>
                        <td><%= button_to "Excluir", [@estabelecimento, unidade], form: { data: { turbo_confirm: "Você tem certeza que deseja excluir?" } }, method: :delete,  class: "btn btn-danger me-1 mb-1" %>
                      </tr>
                    </tbody>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
